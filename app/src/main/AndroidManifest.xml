<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="at.fhooe.mc.android.cakespromoteobesity">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".main.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".lobby.CreateLobby"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".lobby.JoinLobby"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".lobby.LobbyOverview"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".game.GameActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".game.ScoreboardActvity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".extra.RulesActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
    </application>

</manifest>