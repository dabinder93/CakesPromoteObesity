<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lobby_overview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="at.fhooe.mc.android.cakespromoteobesity.lobbysettings.LobbyOverview"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Lobby Name"
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_lobbyOv_lobbyName"
                android:textSize="18sp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

            <TextView
                android:text="Players"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tv_lobbyOv_players"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:gravity="left|center_vertical"
                android:elevation="1dp"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.96">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp">

                <TextView
                    android:text="@string/tv_txt_Host"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_lobbyOv_host"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:layout_width="wrap_content" />

                <TextView
                    android:text="@string/tv_txt_Host"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_lobbyOv_hostName"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/tv_txt_lobby_item_decks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_lobbyOv_decks"
                    android:gravity="bottom"
                    android:textSize="18sp" />

                <TextView
                    android:text="Deck List"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_lobbyOv_deckList"
                    android:gravity="bottom"
                    android:layout_marginLeft="5dp"
                    android:textSize="15sp" />

            </LinearLayout>

    </LinearLayout>

</LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="363dp"
        android:id="@+id/lv_playerInLobby"
        android:layout_weight="1" />
</LinearLayout>
